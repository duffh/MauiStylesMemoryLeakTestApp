<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiStylesMemoryLeakTestApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Button x:Name="OpenStyledPageButton" Text="Open Styled Page" Clicked="OpenStyledPageButton_Clicked" HorizontalOptions="Center"/>
            <Button x:Name="OpenUnstyledPageButton" Text="Open Unstyled Page" Clicked="OpenUnstyledPageButton_Clicked" HorizontalOptions="Center"/>
            <Button x:Name="GCCollectButton" Text="GC Collect" Clicked="GCCollectButton_Clicked" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
